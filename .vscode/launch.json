  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "API",
      "skipFiles": [
        "<node_internals>/**"
      ],
      //"cwd": "${workspaceFolder}/feedzztrab-api",
      "program": "${workspaceFolder}/feedzztrab-api/node_modules/nodemon/bin/nodemon.js",
      "args": ["${workspaceFolder}/feedzztrab-api/app.js"],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "envFile": "${workspaceFolder}/feedzztrab-api/.env"
    }
  ]
}